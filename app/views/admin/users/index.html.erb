<h1>Users</h1>

<p><%= link_to "Add New User", new_admin_user_path %></p>

<table class="table table-striped">
  <tr>
    <th>ID</th>
    <th>Username</th>
    <th>Email</th>
    <th>Created At</th>
    <th>Password</th>
  </tr>
  <% for user in @users %>
    <tr>
      <td><%= link_to user.id, admin_user_path(user) %></td>
      <td><%= user.username %></td>
      <td><%= user.email%></td>
      <td><%= time_ago_in_words user.created_at %> ago
      <%= user.created_at.strftime('%A, %d %b %Y %l:%M %p') %></td>
      <td><%= user.password %></td>
    </tr>
  <% end %>
</table>