<h1><%= @user.username %></h1> 

<p> Email: <%= @user.email %> </p>

 <p> <%= @user.created_at.strftime('%A, %d %b %Y %l:%M %p') %> </p>

 <p> <%= @user.updated_at.strftime('%A, %d %b %Y %l:%M %p') %> </p>

 <p>Password: <%= @user.password%> </p>

 <p><%= link_to "Edit User", edit_admin_user_path %></p>

 <p><%= link_to "Delete user", admin_user_path(@user), method: :delete, data: { confirm: 'Are you sure you want to delete this user?' } %> </p>

 <p><%= link_to "Back to User List", admin_users_path %></p>